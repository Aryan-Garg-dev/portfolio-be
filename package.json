{
	"name": "server",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --hot run ./src/index.ts",
		"build": "bun build ./src/index.ts --outdir dist",
		"start": "bun run dist/index.js",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write",
		"prepare": "husky",
		"db:seed": "bun run src/scripts/db/seed.script.ts",
		"db:sync": "bun run src/scripts/db/sync.script.ts"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json}": ["biome check --write"]
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/bun": "latest",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/morgan": "^1.9.10",
		"@types/nodemailer": "^6.4.17",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@t3-oss/env-core": "^0.13.8",
		"compression": "^1.8.1",
		"connect-redis": "^9.0.0",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^8.0.1",
		"express-session": "^1.18.2",
		"fast-json-stable-stringify": "^2.1.0",
		"helmet": "^8.1.0",
		"lint-staged": "^16.1.2",
		"mongoose": "^8.17.0",
		"morgan": "^1.10.1",
		"nodemailer": "^7.0.5",
		"rate-limit-redis": "^4.2.1",
		"redis": "^5.6.1",
		"socket.io": "^4.8.1",
		"winston": "^3.17.0",
		"zod": "^4.0.14"
	}
}
